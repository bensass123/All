<script>
function palindromization(element, n){
  var retString = "";
  var isEven = (n % 2 == 0);
  
  
  if (isEven) {
    for (i = 0; i < n/2; i++) {
      retString += element.charAt(i);
    }
    for (i = n/2; i < n; i++) {
      retString += element.charAt(i);
    }
  return retString;
  }


}

</script>

